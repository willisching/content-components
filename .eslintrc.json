{
  "extends": "brightspace/lit-config",
  "ignorePatterns": [
    "coverage/**/*"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "globals": {
    "Prism": false
  },
  "overrides": [
    {
      "files": ["lang/*.js"],
      "rules": {
        "indent": ["off"],
        "quotes": ["error", "double"]
      }
    }
  ],
  "rules": {
    "object-curly-spacing": "off",
    "sort-imports": "off",
    "no-console": "warn",
    "lines-between-class-members": "error",
    "no-multi-spaces": "error",
    "key-spacing": ["error", { "afterColon": true }]
  },
  "env": {
    "mocha": true,
    "browser": true,
    "amd": true,
    "node": true
  }
}
