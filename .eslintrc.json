{
  "extends": "brightspace/lit-config",
  "ignorePatterns": [
    "coverage/**/*",
    "capture/d2l-capture-producer/src/node-vtt-compiler.js",
    "build/*"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "globals": {
    "Prism": false
  },
  "rules": {
    "object-curly-spacing": "off",
    "sort-imports": "off",
    "no-console": "warn",
    "lines-between-class-members": "error",
    "no-multi-spaces": "error"
  },
  "env": {
    "mocha": true,
	"browser": true,
    "amd": true,
	"node": true
  }
}
